{
  "name": "ai-course-creator-backend",
  "version": "1.0.0",
  "description": "AI-powered course creation backend with RAG technology",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "worker": "nodemon --exec ts-node src/workers/queue.ts",
    "migration:run": "ts-node src/database/migrate.ts",
    "migration:create": "ts-node src/database/create-migration.ts",
    "test:db": "ts-node src/tests/test-database.ts",
    "test:auth": "ts-node src/tests/test-auth.ts",
    "test:upload": "ts-node src/tests/test-upload.ts",
    "test:all": "npm run test:db && npm run test:auth && npm run test:upload && npm run test:vector-service && npm run test:claude-service",
    "test:server": "ts-node src/tests/test-server.ts",
    "test:document-processor": "ts-node src/tests/test-document-processor.ts",
    "test:vector-service": "ts-node src/tests/test-vector-service.ts",
    "test:claude-service": "ts-node src/tests/test-claude-service.ts"
  },
  "keywords": [
    "ai",
    "course-creator",
    "rag",
    "education",
    "nodejs"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.55.1",
    "@qdrant/js-client-rest": "^1.14.1",
    "@supabase/supabase-js": "^2.50.3",
    "archiver": "^7.0.1",
    "axios": "^1.10.0",
    "bcryptjs": "^3.0.2",
    "bull": "^4.16.5",
    "cors": "^2.8.5",
    "dotenv": "^17.0.1",
    "express": "^5.1.0",
    "gpt-3-encoder": "^1.1.4",
    "handlebars": "^4.7.8",
    "helmet": "^8.1.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "langdetect": "^0.2.1",
    "llamaindex": "^0.11.12",
    "mammoth": "^1.9.1",
    "marked": "^16.0.0",
    "morgan": "^1.10.0",
    "multer": "^2.0.1",
    "natural": "^8.0.1",
    "pdf-parse": "^1.1.1",
    "pptxgenjs": "^4.0.1",
    "puppeteer": "^24.11.2",
    "readability-scores": "^1.0.8",
    "redis": "^5.5.6",
    "uuid": "^11.1.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/bull": "^3.15.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/express-rate-limit": "^5.1.3",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.0.10",
    "@types/redis": "^4.0.10",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "jest": "^30.0.4",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "rate-limit-redis": "^4.2.1",
    "supertest": "^7.1.1",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  }
}
